{
    "private": false,
    "name": "@actions-rs-plus/clippy-check",
    "version": "2.0.0",
    "author": "actions-rs-plus",
    "license": "MIT",
    "description": "Run clippy and annotate the diff with errors and warnings",
    "main": "dist/index.js",
    "files": [
        "dist/**/*.js",
        "dist/**/*.js.map",
        "dist/**/*.d.ts"
    ],
    "scripts": {
        "build": "ncc build src/main.ts --minify && mkdir -p dist/.matchers && cp matchers/rust.json dist/.matchers/rust.json",
        "watch": "ncc build src/main.ts --watch",
        "lint": "eslint src --ext=ts,tsx",
        "lint:fix": "npm run lint -- --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "refresh": "rm -rf ./dist/* && npm run build",
        "test": "jest --watchAll",
        "test:ci": "jest",
        "deps:ci": "depcruise --output-type err src",
        "deps:graph": "depcruise --output-type dot src | dot -T svg > dependency-graph.svg",
        "deps:report": "depcruise --output-type err-html --output-to dependency-report.html src"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/actions-rs-plus/clippy-check.git"
    },
    "keywords": [
        "actions",
        "rust",
        "cargo"
    ],
    "bugs": {
        "url": "https://github.com/actions-rs-plus/core/issues"
    },
    "dependencies": {
        "@actions-rs-plus/core": "^0.1.10",
        "@actions/core": "^1.10.1",
        "@actions/exec": "^1.1.1",
        "string-argv": "^0.3.2"
    },
    "devDependencies": {
        "@types/jest": "^29.5.5",
        "@types/node": "^18.17.16",
        "@types/semver": "^7.5.2",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "@vercel/ncc": "^0.38.0",
        "conventional-changelog-conventionalcommits": "^6.0.1",
        "dependency-cruiser": "^13.1.5",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^39.0.0",
        "eslint-import-resolver-typescript": "^3.6.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^16.1.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "jest-junit": "^16.0.0",
        "lint-staged": "^14.0.1",
        "prettier": "^3.0.3",
        "semantic-release": "^21.1.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "npm run test:lint:fix",
            "depcruise --validate -- "
        ]
    }
}
